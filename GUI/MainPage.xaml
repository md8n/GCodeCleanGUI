<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GUI.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="md8n.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="md8n logo" />

            <Label
                Text="Welcome to &#10;GCodeClean GUI"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to the GCodeClean GUI" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
